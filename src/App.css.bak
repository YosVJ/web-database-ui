/* Light theme */
:root,
[data-theme="light"] {
  --bg: #f8f9fa;
  --card: #ffffff;
  --card-hover: #f8f9fa;
  --text: #1a1a1a;
  --muted: #6c757d;
  --border: #e9ecef;
  --border-strong: #dee2e6;
  --shadow: 0 4px 12px rgba(0, 0, 0, 0.08);
  --shadow-lg: 0 12px 32px rgba(0, 0, 0, 0.12);
  --input-bg: #ffffff;
  --input-border: #ced4da;
  --btn-bg: #212529;
  --btn-text: #ffffff;
  --btn-hover: #0d1117;
  --alert-bg: #fee;
  --alert-border: #fcc;
  --alert-text: #c00;
  --danger-bg: #dc3545;
  --danger-text: #ffffff;
  --danger-hover: #c82333;
  --danger-border: #dc3545;
}

/* Dark theme */
[data-theme="dark"] {
  --bg: #0b1020;
  --card: rgba(255, 255, 255, 0.05);
  --card-hover: rgba(255, 255, 255, 0.08);
  --text: rgba(255, 255, 255, 0.95);
  --muted: rgba(255, 255, 255, 0.6);
  --border: rgba(255, 255, 255, 0.12);
  --border-strong: rgba(255, 255, 255, 0.18);
  --shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
  --shadow-lg: 0 20px 60px rgba(0, 0, 0, 0.5);
  --input-bg: rgba(0, 0, 0, 0.3);
  --input-border: rgba(255, 255, 255, 0.15);
  --btn-bg: rgba(255, 255, 255, 0.1);
  --btn-text: rgba(255, 255, 255, 0.95);
  --btn-hover: rgba(255, 255, 255, 0.15);
  --alert-bg: rgba(239, 68, 68, 0.15);
  --alert-border: rgba(239, 68, 68, 0.3);
  --alert-text: rgba(255, 200, 200, 0.95);
  --danger-bg: rgba(239, 68, 68, 0.2);
  --danger-text: rgba(255, 150, 150, 0.95);
  --danger-hover: rgba(239, 68, 68, 0.3);
  --danger-border: rgba(239, 68, 68, 0.4);
}

* { box-sizing: border-box; }

body {
  margin: 0;
  color: var(--text);
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  background: var(--bg);
  transition: background-color 0.3s ease, color 0.3s ease;
}

[data-theme="dark"] body {
  background:
    radial-gradient(1200px 600px at 10% 10%, rgba(120, 119, 198, 0.2), transparent 60%),
    radial-gradient(1000px 500px at 90% 20%, rgba(56, 189, 248, 0.15), transparent 55%),
    radial-gradient(900px 500px at 50% 90%, rgba(34, 197, 94, 0.1), transparent 55%),
    var(--bg);
}

.page {
  min-height: 100vh;
  display: grid;
  place-items: center;
  padding: 24px 16px;
}

.card {
  width: 100%;
  max-width: 720px;
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: 16px;
  box-shadow: var(--shadow);
  padding: 32px;
  transition: box-shadow 0.2s ease, border-color 0.2s ease;
}

@media (max-width: 640px) {
  .page {
    padding: 16px 12px;
  }
  
  .card {
    padding: 24px 20px;
    border-radius: 12px;
  }
}

.header {
  display: flex;
  gap: 20px;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 8px;
}

.header-content {
  flex: 1;
  min-width: 0;
}

.header h1 {
  margin: 0 0 8px;
  font-size: 28px;
  font-weight: 600;
  letter-spacing: -0.3px;
  line-height: 1.2;
}

.header-actions {
  display: flex;
  gap: 8px;
  align-items: flex-start;
  flex-shrink: 0;
}

.sub {
  margin: 0;
  color: var(--muted);
  font-size: 14px;
  line-height: 1.4;
}

@media (max-width: 640px) {
  .header {
    flex-direction: column;
    gap: 16px;
  }

  .header h1 {
    font-size: 24px;
  }

  .header-actions {
    width: 100%;
    justify-content: space-between;
  }
}

.form {
  display: flex;
  gap: 12px;
  margin-top: 24px;
}

.input {
  flex: 1;
  background: var(--input-bg);
  border: 1px solid var(--input-border);
  color: var(--text);
  border-radius: 10px;
  padding: 12px 16px;
  font-size: 15px;
  outline: none;
  transition: border-color 0.2s ease, box-shadow 0.2s ease;
  min-width: 0;
}

.input:focus {
  border-color: var(--border-strong);
  box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.05);
}

[data-theme="dark"] .input:focus {
  box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.05);
}

.input::placeholder {
  color: var(--muted);
}

@media (max-width: 640px) {
  .form {
    flex-direction: column;
    gap: 10px;
  }
  
  .input {
    width: 100%;
  }
}

.btn {
  border: 1px solid var(--border);
  background: var(--btn-bg);
  color: var(--btn-text);
  padding: 12px 20px;
  border-radius: 10px;
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: background-color 0.2s ease, border-color 0.2s ease, opacity 0.2s ease;
  white-space: nowrap;
}

.btn:hover:not(:disabled) {
  background: var(--btn-hover);
  border-color: var(--border-strong);
}

.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.btn.ghost {
  background: transparent;
  color: var(--text);
  border-color: var(--border);
}

.btn.ghost:hover:not(:disabled) {
  background: var(--card-hover);
}

.btn.danger {
  background: var(--danger-bg);
  color: var(--danger-text);
  border-color: var(--danger-border);
}

.btn.danger:hover:not(:disabled) {
  background: var(--danger-hover);
  border-color: var(--danger-border);
}

.btn-icon {
  border: 1px solid var(--border);
  background: transparent;
  color: var(--text);
  padding: 10px 12px;
  border-radius: 10px;
  font-size: 18px;
  cursor: pointer;
  transition: background-color 0.2s ease, border-color 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  line-height: 1;
}

.btn-icon:hover {
  background: var(--card-hover);
  border-color: var(--border-strong);
}

@media (max-width: 640px) {
  .btn {
    padding: 10px 16px;
    font-size: 14px;
  }
  
  .btn-icon {
    width: 38px;
    height: 38px;
  }
}

.alert {
  margin-top: 20px;
  padding: 12px 16px;
  border-radius: 10px;
  background: var(--alert-bg);
  border: 1px solid var(--alert-border);
  color: var(--alert-text);
  font-size: 14px;
  line-height: 1.5;
}

.list {
  margin-top: 24px;
  border: 1px solid var(--border);
  background: var(--card);
  border-radius: 12px;
  overflow: hidden;
}

.listHeader {
  padding: 14px 16px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: var(--card-hover);
  border-bottom: 1px solid var(--border);
}

.listHeader h2 {
  margin: 0;
  font-size: 13px;
  font-weight: 600;
  color: var(--muted);
  letter-spacing: 0.5px;
  text-transform: uppercase;
}

.pill {
  font-size: 12px;
  font-weight: 500;
  color: var(--text);
  background: var(--card-hover);
  border: 1px solid var(--border);
  padding: 4px 10px;
  border-radius: 12px;
  min-width: 24px;
  text-align: center;
}

ul {
  list-style: none;
  margin: 0;
  padding: 0;
}

.item {
  padding: 16px;
  border-top: 1px solid var(--border);
  transition: background-color 0.15s ease;
}

.item:first-child {
  border-top: none;
}

.item:hover {
  background: var(--card-hover);
}

.item-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 20px;
}

.item-content {
  flex: 1;
  min-width: 0;
  padding-right: 8px;
}

.itemText {
  font-size: 15px;
  line-height: 1.5;
  color: var(--text);
  word-wrap: break-word;
}

.itemMeta {
  margin-top: 8px;
  font-size: 12px;
  color: var(--muted);
}

.item-actions {
  display: flex;
  gap: 8px;
  align-items: center;
  flex-wrap: wrap;
  flex-shrink: 0;
}

.item-edit {
  display: flex;
  flex-direction: column;
  gap: 12px;
  width: 100%;
}

.item-edit .item-actions {
  display: flex;
  gap: 8px;
  align-items: center;
  justify-content: flex-end;
  flex-wrap: wrap;
}

.input-edit {
  width: 100%;
  background: var(--input-bg);
  border: 1px solid var(--input-border);
  color: var(--text);
  border-radius: 8px;
  padding: 10px 14px;
  font-size: 15px;
  outline: none;
  transition: border-color 0.2s ease, box-shadow 0.2s ease;
  font-family: inherit;
}

.input-edit:focus {
  border-color: var(--border-strong);
  box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.05);
}

[data-theme="dark"] .input-edit:focus {
  box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.05);
}

.item-loading {
  font-size: 13px;
  color: var(--muted);
  font-style: italic;
}

.btn-small {
  padding: 8px 14px;
  font-size: 13px;
}

@media (max-width: 640px) {
  .item-row {
    flex-direction: column;
    gap: 12px;
    align-items: stretch;
  }

  .item-content {
    padding-right: 0;
  }

  .item-actions {
    align-self: stretch;
    justify-content: flex-start;
    gap: 8px;
  }

  .item-edit .item-actions {
    justify-content: flex-start;
  }

  .btn-small {
    padding: 8px 14px;
    font-size: 12px;
    flex: 1;
    min-width: 0;
  }
}

.empty {
  padding: 32px 16px;
  color: var(--muted);
  font-size: 14px;
  text-align: center;
}

@media (max-width: 640px) {
  .listHeader {
    padding: 12px 14px;
  }

  .item {
    padding: 14px;
  }

  .itemText {
    font-size: 14px;
  }
}

.footer {
  margin-top: 32px;
  padding-top: 24px;
  border-top: 1px solid var(--border);
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 10px;
  color: var(--muted);
  font-size: 12px;
  flex-wrap: wrap;
}

.dot {
  opacity: 0.5;
}

@media (max-width: 640px) {
  .footer {
    margin-top: 24px;
    padding-top: 20px;
    font-size: 11px;
    gap: 8px;
  }
}
